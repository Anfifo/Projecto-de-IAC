
NUMERO_EVENTOS_SENSORES EQU 801CH            ;cada evento corresponde a 2 valores no porto na INFORMAÇAO_SENSORES
INFORMAÇAO_SENSORES EQU 801EH

LCD_SUPERIOR EQU 8000H
LCD_INFERIOR EQU 8002H

incio:
MOV R1, INFORMAÇAO_SENSORES
MOV R2, LCD_SUPERIOR
MOV R3, LCD_INFERIOR
MOVB R0, [R1]

SHR R0, 8
BIT R0, 1
JZ comboio0

comboio1:
MOVB [R2], R0

comboio0:
MOVB [R3], R0

fim: JMP inicio
